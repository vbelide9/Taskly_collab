rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    // User Profiles (Presence)
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Shared Lists
    match /lists/{listId} {
      function isMember() {
         return request.auth.uid in resource.data.members;
      }
      
      // Create: Must include self
      allow create: if request.auth != null && request.auth.uid in request.resource.data.members;
      
      // Update: Member OR Joining (adding self)
      allow update: if request.auth != null && (
        request.auth.uid in resource.data.members || 
        request.auth.uid in request.resource.data.members
      );
      
      // Read/Delete: Member only
      allow read, delete: if request.auth != null && isMember();
      
      // Tasks
      match /tasks/{taskId} {
         allow read, write: if request.auth != null && 
           request.auth.uid in get(/databases/$(database)/documents/lists/$(listId)).data.members;
      }
    }

    // Invites System
    match /invites/{inviteId} {
      // Read: Only the recipient can read their invites
      allow read: if request.auth != null && resource.data.toEmail == request.auth.token.email;
      
      // Create: Anyone can create (send) an invite
      allow create: if request.auth != null;
      
      // Delete: Recipient (accept/reject) or Sender (cancel)
      allow delete: if request.auth != null && (
        resource.data.toEmail == request.auth.token.email || 
        resource.data.fromUid == request.auth.uid
      );
    }
  }
}